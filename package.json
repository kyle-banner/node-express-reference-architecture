{
  "name": "node-express-reference-architecture",
  "version": "1.0.0",
  "description": "NodeJS+Express Reference Architecture",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "dist": "sh ./scripts/dist.sh",
    "prettify": "prettier --write \"./**/*.{ts,json}\"",
    "start": "node -r dotenv/config build/server.js",
    "start:watch": "npm run prettify && nodemon --silent",
    "startts": "ts-node -r dotenv/config src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyle-banner/node-express-reference-architecture.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kyle-banner/node-express-reference-architecture/issues"
  },
  "homepage": "https://github.com/kyle-banner/node-express-reference-architecture#readme",
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/mongodb": "^3.5.18",
    "@types/uuid": "^8.0.0",
    "aws-sdk": "^2.702.0",
    "body-parser": "^1.19.0",
    "class-validator": "0.10.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "inversify": "^5.0.1",
    "mongodb": "^3.5.8",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "typescript": "^3.8.3",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/node": "^13.9.5",
    "nodemon": "^2.0.2",
    "prettier": "2.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
