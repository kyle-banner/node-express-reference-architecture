{
  "name": "node-express-reference-architecture",
  "version": "1.0.0",
  "description": "NodeJS+Express Reference Architecture",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run prettify && npm run build",
    "prettify": "prettier --write \"./**/*.{ts,json}\"",
    "start": "node -r dotenv/config .",
    "start:watch": "nodemon --silent",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyle-banner/node-express-reference-architecture.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kyle-banner/node-express-reference-architecture/issues"
  },
  "homepage": "https://github.com/kyle-banner/node-express-reference-architecture#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "sqlite": "^4.0.7",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.3",
    "@types/node": "^13.9.5",
    "nodemon": "^2.0.2",
    "prettier": "2.0.2",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
